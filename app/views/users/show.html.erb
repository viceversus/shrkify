<h1><%= @user.name %></h1>

<div class="span3">
<% if current_user && current_user?(@user) %>
	<h3 class="link-title">Shrkify Your Link!</h3>
	<%= render :partial => 'shared/link_form', :locals => { :link => @link } %>
<% end %>
</div>

<div class="span8 pull-right center">
	<% if !@links.empty? %>
		<h3 class="link-title"><%= "#{@user.name}'s Links"%></h3>
		<table id="link-table" class="table table-striped table-bordered">  
		    <thead>  
		      <tr>  
		        <th>Link URL</th>
		        <th>Shrk Link</th>
		        <th>Custom</th>
		        <th>Visit Count</th>
				<th></th>
		      </tr>
		    </thead>
			<tbody>
			<%= render :partial => 'shared/link', :collection => @links %>
			</tbody>
		</table>
	<% else %>
		<h3>This user has no links.</h3>
	<% end %>
</div>